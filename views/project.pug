extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1 #{project_name}


        p #{description}

      .project-tech-links-box.box
        h6 Technologies
        ul

          each technology in technologies
            li= technology


        a.btn-link(target='_blank', href=live_link) Live Demo
        a.btn-link(target='_blank', href=github_link) GitHub Repo

    .project-img-box.box

      
      img.project-img(src=`${image_urls[1]}`, alt='Project image')


    nav.nav
      a(href='/')
        span &larr;
        |  Back
